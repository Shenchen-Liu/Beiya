table{
    border-collapse: collapse;
    border-spacing: 0;
    font-size: inherit;
	width:100%;
}

table threa{
border: 1px solid rgb(34, 34, 34);
}
table th{
    font-weight: normal;
    padding: 5px 10px;
    white-space: nowrap;
	background-color: rgb(51, 51, 51);
    border-right: 1px solid rgb(204, 204, 204);
    color: rgb(255, 255, 255);
    text-align: center;
}
table td{
	    background-color: rgb(247, 247, 247);
    border: 1px solid rgb(204, 204, 204);
	 margin: 0;
	 padding:10px;
	 text-align: center;
}
.td_qty_ {
    margin: 0 auto;
    width: 110px;
    text-align: center;
    width: 50px;
}

input.cart_min,input.cart_add {
    cursor: pointer;
    height: 20px;
    line-height: 20px;
    text-align: center;
    width: 20px;
    border:1px solid rgb(204, 204, 204);
}

.td_qty_, .item_number input#text_box {
    height: 17px;
    text-align: center;
    width: 50px;
}
.blue {
    background-color: rgb(7, 149, 214);
    border: 1px solid rgb(7, 149, 214);
    color: rgb(255, 255, 255);
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
}
.orange {
    background-color: rgb(255, 171, 17);
    border: 2px solid rgb(255, 171, 17);
    color: rgb(255, 255, 255);
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
}
.red {
    background-color: rgb(204, 0, 0);
    border: 2px solid rgb(204, 0, 0);
    color: rgb(255, 255, 255);
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
}
.button {
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    font-family:"微软雅黑";
    outline: medium none;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.8);
    transition-duration: 0.3s;
    vertical-align: baseline;
    width:100px;
}
.Bbutton {
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    font-family:"微软雅黑";
    outline: medium none;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.8);
    transition-duration: 0.3s;
    vertical-align: baseline;
    width:80px;
}
input.btn-medium {
    border: 0 none;
    cursor: pointer;
}
.leave_message{
	float:left;
}

.item_total{
	 text-align: right;
}
.submit_order{
	float:right;
}
